<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConverterApp.MainPage">
            

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Verdens mest simple lommeregner" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="entryTal1" Placeholder="skriv tal 1 her" />
        <Entry x:Name="entryTal2" Placeholder="skriv tal 2 her" />
        <Button Clicked="Button_Clicked" Text="plus" />
        <Button x:Name="btnMinus" Clicked="btnMinus_Clicked" Text="minus" />
        
        
        <Label x:Name="labelResultat" Text="Resultat vises nedenfor" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="finalResult" Text="her skal resultatet stå" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Learn more at "/>
                        <Span Text="https://aka.ms/xamarin-quickstart" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>

</ContentPage>
